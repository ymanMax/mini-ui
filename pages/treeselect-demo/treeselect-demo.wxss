.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.demo-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 32rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.demo-content {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.demo-button {
  width: 100%;
  padding: 24rpx;
  background-color: #007aff;
  color: #fff;
  border: none;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 122, 255, 0.2);
  transition: all 0.3s ease;
}

.demo-button:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 122, 255, 0.15);
}

.selected-info {
  width: 100%;
  padding: 24rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}

.info-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 16rpx;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.selected-list {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.selected-item {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background-color: #e3f2fd;
  color: #1976d2;
  border-radius: 24rpx;
  font-size: 26rpx;
  box-shadow: 0 2rpx 8rpx rgba(25, 118, 210, 0.15);
  transition: all 0.3s ease;
}

.selected-item:active {
  transform: scale(0.95);
}

.item-close {
  margin-left: 16rpx;
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #1976d2;
  color: #fff;
  border-radius: 50%;
  font-size: 24rpx;
  font-weight: 600;
}

/* Í”¾¡ */
@media (max-width: 750rpx) {
  .container {
    padding: 16rpx;
  }

  .demo-section {
    padding: 24rpx;
    margin-bottom: 16rpx;
  }

  .section-title {
    font-size: 28rpx;
    margin-bottom: 24rpx;
  }

  .demo-button {
    font-size: 28rpx;
    padding: 20rpx;
    margin-bottom: 20rpx;
  }

  .selected-info {
    padding: 20rpx;
    margin-bottom: 20rpx;
  }

  .info-label,
  .info-value {
    font-size: 26rpx;
  }

  .selected-item {
    font-size: 24rpx;
    padding: 14rpx 20rpx;
  }

  .item-close {
    width: 28rpx;
    height: 28rpx;
    font-size: 22rpx;
  }
}