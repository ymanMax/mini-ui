/* pages/timepicker-demo/timepicker-demo.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.demo-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
  margin-bottom: 40rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.demo-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.demo-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.demo-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 28rpx;
  color: #666;
  flex: 1;
  margin-right: 20rpx;
}

.value {
  font-size: 28rpx;
  color: #007bff;
  padding: 10rpx 20rpx;
  background-color: #f8f9fa;
  border-radius: 8rpx;
  min-width: 200rpx;
  text-align: center;
  border: 1rpx solid #e9ecef;
  transition: all 0.3s ease;
}

.value:active {
  background-color: #e9ecef;
  transform: scale(0.95);
}

/* 响应式设计 */
@media (max-width: 414px) {
  .container {
    padding: 15rpx;
  }

  .demo-title {
    font-size: 32rpx;
    margin-bottom: 30rpx;
    padding: 15rpx;
  }

  .demo-section {
    padding: 25rpx;
    margin-bottom: 25rpx;
  }

  .section-title {
    font-size: 28rpx;
    margin-bottom: 15rpx;
    padding-bottom: 10rpx;
  }

  .demo-item {
    padding: 15rpx 0;
  }

  .label {
    font-size: 26rpx;
    margin-right: 15rpx;
  }

  .value {
    font-size: 26rpx;
    padding: 8rpx 16rpx;
    min-width: 180rpx;
  }
}

@media (max-width: 375px) {
  .container {
    padding: 10rpx;
  }

  .demo-title {
    font-size: 30rpx;
    margin-bottom: 25rpx;
    padding: 12rpx;
  }

  .demo-section {
    padding: 20rpx;
    margin-bottom: 20rpx;
  }

  .section-title {
    font-size: 26rpx;
    margin-bottom: 12rpx;
    padding-bottom: 8rpx;
  }

  .demo-item {
    padding: 12rpx 0;
    flex-direction: column;
    align-items: flex-start;
  }

  .label {
    font-size: 24rpx;
    margin-right: 0;
    margin-bottom: 10rpx;
  }

  .value {
    font-size: 24rpx;
    padding: 8rpx 16rpx;
    min-width: 160rpx;
  }
}
