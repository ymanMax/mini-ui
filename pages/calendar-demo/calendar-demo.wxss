/* pages/calendar-demo/calendar-demo.wxss */

.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 页面标题 */
.page-header {
  text-align: center;
  padding: 40rpx 0;
  background-color: #ffffff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  color: #666666;
}

/* 选择模式切换 */
.mode-switcher {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.switcher-label {
  display: block;
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 24rpx;
}

.switcher-buttons {
  display: flex;
  justify-content: space-between;
}

.mode-btn {
  flex: 1;
  font-size: 30rpx;
  padding: 20rpx;
  margin: 0 8rpx;
  border-radius: 8rpx;
  background-color: #f5f5f5;
  color: #666666;
  border: 2rpx solid #e0e0e0;
}

.mode-btn.active {
  background-color: #1890ff;
  color: #ffffff;
  border-color: #1890ff;
}

.mode-btn:active {
  transform: scale(0.95);
}

/* 结果展示 */
.result-section {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.result-label {
  display: block;
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 24rpx;
}

.result-content {
  min-height: 80rpx;
}

.result-item {
  padding: 24rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  border-left: 6rpx solid #cccccc;
}

.result-item.has-value {
  background-color: #e6f7ff;
  border-left-color: #1890ff;
}

.result-text {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.6;
}

/* 打开日历按钮 */
.calendar-action {
  text-align: center;
  margin-bottom: 20rpx;
}

.open-calendar-btn {
  font-size: 34rpx;
  padding: 28rpx 64rpx;
  background-color: #1890ff;
  color: #ffffff;
  border-radius: 50rpx;
  box-shadow: 0 4rpx 16rpx rgba(24, 144, 255, 0.3);
  border: none;
}

.open-calendar-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(24, 144, 255, 0.3);
}

/* 说明文档 */
.documentation-section {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  display: block;
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 24rpx;
}

.feature-list {
  margin-top: 32rpx;
}

.feature-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.feature-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  margin-top: 2rpx;
}

.feature-text {
  flex: 1;
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
}

/* 响应式设计 */
@media screen and (max-width: 375px) {
  .page-title {
    font-size: 42rpx;
  }

  .mode-btn {
    font-size: 26rpx;
    padding: 16rpx;
    margin: 0 6rpx;
  }

  .open-calendar-btn {
    font-size: 30rpx;
    padding: 24rpx 48rpx;
  }

  .result-text,
  .feature-text {
    font-size: 26rpx;
  }
}
